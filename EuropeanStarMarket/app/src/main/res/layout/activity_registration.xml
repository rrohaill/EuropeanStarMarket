<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_main_catagory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <include
            android:id="@+id/header_layout"
            layout="@layout/header" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <com.star.market.europeanstarmarket.CustomFontView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Noteworthy"
                    android:text="Enter User Name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textViewTextSizeLarge" />


                <com.star.market.europeanstarmarket.CustonEditTextFontView
                    android:id="@+id/et_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:hint="User Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="30"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/textViewTextSizeLarge" />

                <com.star.market.europeanstarmarket.CustomFontView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Enter User Email"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textViewTextSizeLarge" />


                <com.star.market.europeanstarmarket.CustonEditTextFontView
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="Email ID"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:minEms="15"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/textViewTextSizeLarge" />

                <com.star.market.europeanstarmarket.CustomFontView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Enter Phone Number"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textViewTextSizeLarge" />


                <com.star.market.europeanstarmarket.CustonEditTextFontView
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="Phone Number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="16"
                    android:minEms="15"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/textViewTextSizeLarge" />

                <com.star.market.europeanstarmarket.CustomFontView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Select Gender"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textViewTextSizeLarge" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/sp_gender"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:minHeight="50dp"
                    android:minWidth="150dp" />

                <com.star.market.europeanstarmarket.CustomFontView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Enter Address"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textViewTextSizeLarge" />


                <com.star.market.europeanstarmarket.CustonEditTextFontView
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="Address"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:minEms="15"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/textViewTextSizeLarge" />

                <com.star.market.europeanstarmarket.CustomFontView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Enter Street No."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textViewTextSizeLarge" />


                <com.star.market.europeanstarmarket.CustonEditTextFontView
                    android:id="@+id/et_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="Street No."
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="50"
                    android:minEms="15"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/textViewTextSizeLarge" />

                <com.star.market.europeanstarmarket.CustomFontView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Enter Building"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textViewTextSizeLarge" />


                <com.star.market.europeanstarmarket.CustonEditTextFontView
                    android:id="@+id/et_building"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="Building"
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="50"
                    android:minEms="15"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/textViewTextSizeLarge" />

                <com.star.market.europeanstarmarket.CustomFontView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Enter Flat No."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textViewTextSizeLarge" />


                <com.star.market.europeanstarmarket.CustonEditTextFontView
                    android:id="@+id/et_flat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="Flat No."
                    android:imeOptions="actionNext"
                    android:inputType="textAutoComplete"
                    android:maxLength="100"
                    android:minEms="15"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/textViewTextSizeLarge" />


                <com.star.market.europeanstarmarket.CustomFontView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Enter Password"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textViewTextSizeLarge" />


                <com.star.market.europeanstarmarket.CustonEditTextFontView
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:minEms="15"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/textViewTextSizeLarge" />

                <com.star.market.europeanstarmarket.CustomFontView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="EnterConfirm Password"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textViewTextSizeLarge" />


                <com.star.market.europeanstarmarket.CustonEditTextFontView
                    android:id="@+id/et_c_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:hint="Confirm Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:minEms="15"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/textViewTextSizeLarge" />

                <com.star.market.europeanstarmarket.CustomFontView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Select Promotions"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textViewTextSizeLarge" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/sp_promotions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:minHeight="50dp"
                    android:minWidth="150dp" />

                <com.star.market.europeanstarmarket.CustomButtonFontView
                    android:id="@+id/btn_register"
                    android:layout_width="@dimen/buttonWidthLarge"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_orange_dark"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="REGISTER"
                    android:textColor="@android:color/white" />

            </LinearLayout>


        </ScrollView>

    </RelativeLayout>

    <include
        android:id="@+id/header_Layout"
        layout="@layout/drawer_layout_list" />


</android.support.v4.widget.DrawerLayout>
