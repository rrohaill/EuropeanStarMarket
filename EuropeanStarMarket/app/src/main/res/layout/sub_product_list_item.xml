<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sub_product_item_height"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/sub_product_item_width"
            android:layout_height="@dimen/sub_product_item_height"
            android:layout_gravity="left"
            android:scaleType="fitXY" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.star.market.europeanstarmarket.CustomFontView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="type"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="@dimen/textViewTextSizeLarge" />

            <com.star.market.europeanstarmarket.CustomFontView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_type"
                android:text="count"
                android:textColor="@color/black_overlay"
                android:textSize="@dimen/textViewTextSizeLarge" />

            <com.star.market.europeanstarmarket.CustomButtonFontView
                android:id="@+id/btn_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@color/btn_blue"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Add to Cart"
                android:textColor="@android:color/white" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>