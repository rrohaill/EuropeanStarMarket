<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="10">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_list_image_height"
        android:layout_weight="8"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="2">

        <com.star.market.europeanstarmarket.CustomFontView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/tv_count"
            android:ellipsize="end"
            android:lines="1"
            android:text="typemzcvkzbhckzvchbm n"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textViewTextSizeLarge" />

        <com.star.market.europeanstarmarket.CustomFontView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:ellipsize="start"
            android:lines="1"
            android:text="countskdvbkshkzbvckjbz"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textViewTextSizeLarge" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black_overlay" />

</LinearLayout>